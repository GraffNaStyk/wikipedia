{% extends layout %}

{% block content %}
<div class="row p-2">
  <div class="col-12">
    <div class="mt-3 row">
      <div class="col-md-6">
        <button class="w-100 mb-3">Buy</button>
        <div class="d-flex flex-column">
          {% for item in items %}
            {% if item.type == 'buy' %}
              <a href="{{ url('items/show/'~item.name) }}" class="link p-1 d-flex justify-content-between align-items-center loot__list">
                <div>
                  <img src="{{ img('images/'~item.hash~'.'~item.ext) }}" alt="IMG"> &nbsp;
                  <b>{{ item.name }}</b>
                </div>
                <span>{{ item.price }} zeni</span>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      <div class="col-md-6">
        <button class="w-100 mb-3">Sell</button>
        <div class="d-flex flex-column">
          {% for item in items %}
            {% if item.type == 'sell' %}
              <a href="{{ url('items/show/'~item.name) }}" class="link p-1 d-flex justify-content-between align-items-center loot__list">
                <div>
                  <img src="{{ img('images/'~item.hash~'.'~item.ext) }}" alt="IMG"> &nbsp;
                  <b>{{ item.name }}</b>
                </div>
                  <span>{{ item.price }} zeni</span>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
