{% extends layout %}

{% block content %}
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <td>Name</td>
        <td>Hp</td>
        <td>Experience</td>
        <td>Loot</td>
      </tr>
    </thead>
    <tbody>
    {% for monster in monsters %}
      <tr>
        <td>{{ monster.name }}</td>
        <td>{{ monster.health }}</td>
        <td>{{ monster.experience }}</td>
        <td>
          {% for item in monster.loot %}
            <b style="color: black;" {{ tooltip(item.description) }} >{{ item.name }} </b>
            <img style=" cursor: pointer;" {{ tooltip(item.description) }} src="{{ img(item.path~item.hash~'.gif') }}" alt="">
            <b style="color: black;"> ({{ item.chance }}%)</b>
            <br>
          {% endfor %}
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
