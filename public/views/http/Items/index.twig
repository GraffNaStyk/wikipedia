{% extends layout %}

{% block content %}
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        {% for head in headers %}
          <th>{{ head|capitalize }}</th>
        {% endfor %}
      </tr>
    </thead>
    <tbody>
    {% for item in items %}
      <tr>
        <td>{{ item.name|capitalize }}</td>
        {% if subType == 'weapons' or subType == 'balls' %}
          <td>{{ item.attack }}</td>
          <td>{{ item.defense }}</td>
        {% endif %}
        {% if subType == 'armors' %}
          <td>{{ item.armor }}</td>
        {% endif %}
        {% if subType == 'balls' %}
          <td>{{ item.range }}</td>
        {% endif %}
        <td>{{ item.description }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
