{% extends layout %}

{% block content %}
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <td>Name</td>
        <td>
          Status points
          &nbsp;
          <b style="color: green;">
            {{ points }}
          </b>
        </td>
      </tr>
    </thead>
    <tbody>
    {% for achievement in achievements %}
      <tr>
        <td>
          <b style="color: #333;">{{ achievement.name }}</b>
        </td>
        <td>
          {{ achievement.status_points }}
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
