{% extends layout %}

{% block content %}
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        {% for head in article.content.header %}
          <th>{{ head|capitalize }}</th>
        {% endfor %}
      </tr>
      </thead>
      <tbody>
      {% for key,item in article.content.body %}
        <tr>
        {% for value in item  %}
          <td>{{ value }}</td>
        {% endfor %}
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
