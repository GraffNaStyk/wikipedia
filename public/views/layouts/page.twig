<!doctype html>
<html lang="pl">
<head>
  <meta http-equiv="Content-Language" content="pl">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta name="robots" content="index,follow,all">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="keywords" content="Pg - Wiki">
  <link rel="shortcut icon" href="data:image/x-icon;" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,600" rel="stylesheet">
  <base href="{{ base() }}">
  <title>Pg - Wiki</title>
  {{ css|raw }}
  <script>
    document.url = '{{ url() }}';
  </script>
</head>
<body>
<div class="right-panel"></div>
<div class="container-fluid">
  <nav class="grid-box-header py-2 align-items-center justify-content-between">
    <button class="menu__btn"> <i class="fa fa-bars"></i> </button>
    <div class="d-flex justify-content-center">
      <a href="{{ url() }}">
        <img src="{{ img('logo.png') }}" alt="">
      </a>
    </div>
    <div class="wiki-box__mobile-container">
      <i class="fa fa-search"></i>
    </div>
    <div class="d-flex">
      <div class="wiki-box big wiki__box--search">
        <form data-el="app" data-action="search/">
          <div class="form__grid">
          {{ input({
            class: 'wiki-input',
            placeholder: 'Szukaj',
            style: 'margin: 0',
            name: 'search'
          }) }}
          </div>
          <span class="mobile__search__closer">
           <svg x="0px" y="0px" viewBox="0 0 496.096 496.096" fill="#aaa" style="height: 26px;">
             <path d="M259.41,247.998L493.754,13.654c3.123-3.124,3.123-8.188,0-11.312c-3.124-3.123-8.188-3.123-11.312,0L248.098,236.686
                L13.754,2.342C10.576-0.727,5.512-0.639,2.442,2.539c-2.994,3.1-2.994,8.015,0,11.115l234.344,234.344L2.442,482.342
                c-3.178,3.07-3.266,8.134-0.196,11.312s8.134,3.266,11.312,0.196c0.067-0.064,0.132-0.13,0.196-0.196L248.098,259.31
                l234.344,234.344c3.178,3.07,8.242,2.982,11.312-0.196c2.995-3.1,2.995-8.016,0-11.116L259.41,247.998z"/>
            </svg>
          </span>
        </form>
        <div data-component="app">
        </div>
      </div>
      <div class="wiki-box big d-flex align-items-center">
        {% if session.user %}
          <p class="mx-2 mb-0 user-welcome">Welcome, {{ session.user.name }}</p>
          <a class="mx-2" href="{{ url() }}"> <i class="fa fa-bell medium__size"></i> </a>
          <a class="mx-2" href="{{ url('logout') }}"> <i class="fa fa-power-off medium__size"></i> </a>
          <a class="mx-2" href="{{ url('admin/dash') }}"> <i class="fa fa-wrench medium__size"></i> </a>
        {% else %}
          <button class="render px-4" data-el="modal" data-url="login">Zaloguj</button>
        {% endif %}
      </div>
    </div>
    <div class="social__items">
      <a href="https://www.youtube.com/c/vulturgra" target="_blank">
        <img src="{{ img('social/yt.png') }}" alt="">
      </a>
      <a href="https://facebook.com/priorityservers" target="_blank">
        <img src="{{ img('social/fb.png') }}" alt="">
      </a>
      <a href="https://discord.gg/gFBdqmR" target="_blank">
        <img src="{{ img('social/discord.png') }}" alt="">
      </a>
      <a href="https://www.instagram.com/priogames/" target="_blank">
        <img src="{{ img('social/insta.png') }}" alt="">
      </a>
    </div>
  </nav>
  <main id="main-page-wrapper" class="grid-box mt-3">
    {% include('layouts/inc/left-aside.twig') %}
    <div class="box main__box">
      <div class="box-header p-0">
        <h3 class="box-header main-color" style="border-bottom: 1px solid white;">
          <b>{{ title }}</b>
        </h3>
      </div>
      <div class="box-body">
        {% block content %}
        {% endblock %}
      </div>
    </div>
    {% include('layouts/inc/right-aside.twig') %}
  </main>
  {% include 'components/modal.twig' %}
  <footer>
  </footer>
</div>
{{ js|raw }}
</body>
</html>
