{% block content %}
  <nav>
    <ul class="pagination py-2 ml-2">
      {% if pagination.prev >= 1 %}
        <li class="page-item"><a class="page-link" href="{{ pagination.url~pagination.prev }}">Previous</a></li>
      {% endif %}
      {% if pagination.page + 1 <= pagination.pages %}
        <li class="page-item"><a class="page-link" href="{{ pagination.url~(pagination.page+1) }}">{{ pagination.page+1 }}</a></li>
      {% endif %}
      {% if pagination.page + 2 <= pagination.pages %}
        <li class="page-item"><a class="page-link" href="{{ pagination.url~(pagination.page+2) }}">{{ pagination.page+2 }}</a></li>
      {% endif %}
      {% if pagination.page + 3 <= pagination.pages %}
        <li class="page-item"><a class="page-link" href="{{ pagination.url~(pagination.page+3) }}">{{ pagination.page+3 }}</a></li>
      {% endif %}
      {% if pagination.next <= pagination.pages %}
        <li class="page-item"><a class="page-link" href="{{ pagination.url~pagination.next }}">Next</a></li>
      {% endif %}
    </ul>
  </nav>
{% endblock %}
