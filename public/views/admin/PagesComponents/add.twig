{% block content %}
  <form data-action="pages/components/store" method="post">
    <div class="modal-header">
      <h5 class="modal-title">Dodaj komponent</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="form__grid">
        {{ select({
          label: 'Tytu≈Ç',
          class: 'form-control',
          data: components,
          name: 'type'
        }) }}

        {{ input({
          type: 'hidden',
          value: id,
          name: 'page_id'
        }) }}
      </div>
    </div>
    <div class="modal-footer">
      <input type="submit" value="Save changes">
    </div>
  </form>
{% endblock %}
