{% block content %}
  <style>
    #modal .modal-dialog {
      max-width: 1500px;
      width: 1500px;
    }
    .modal-body {
      max-height: 380px;
      height: 380px;
      overflow-y: scroll;
    }
  </style>
  <form data-action="pages/components/update" method="post">
    <div class="modal-header">
      <h5 class="modal-title">Edycja komponentu {{ type }}</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      {% include 'admin/PagesComponents/'~type~'.twig' %}
      {{ input({
        type: 'hidden',
        name: 'id',
        value: id
      }) }}
    </div>
    <div class="modal-footer">
      <input type="submit" value="Save changes">
    </div>
  </form>
{% endblock %}
