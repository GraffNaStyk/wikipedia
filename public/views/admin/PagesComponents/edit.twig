{% block content %}
  <style>
    #modal .modal-dialog {
      max-width: 1500px;
      width: {{ width ?? '1500px'}};
    }
    .modal-body {
      max-height: 380px;
      height: 380px;
      overflow-y: scroll;
    }
  </style>
  {% if type != 'text' %}
    <form data-action="pages/components/update" method="post">
  {% endif %}
    <div class="modal-header">
      <h5 class="modal-title">Edycja komponentu {{ type }}</h5>
      {% if type == 'text' %}
        <input type="text" name="createGrid" placeholder="UtwÃ³rz grid 1,2,3,4,6" class="form-control" style="width:400px;">
      {% endif %}
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      {% include 'admin/PagesComponents/'~type~'.twig' %}
      {% if type != 'text' %}
      {{ input({
        type: 'hidden',
        name: 'id',
        value: id
      }) }}
      {% endif %}
    </div>
    <div class="modal-footer">
      {% if type != 'text' %}
      <input type="submit" value="Save changes">
      {% endif %}
    </div>
  {% if type != 'text' %}
  </form>
  {% endif %}
{% endblock %}
