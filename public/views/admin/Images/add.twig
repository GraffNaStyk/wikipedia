{% block content %}
  <form data-action="images/store" method="post">
    <div class="modal-header">
      <h5 class="modal-title">Dodaj nowe zdjęcie</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="form__grid">
        {{ input({
          label: 'Nazwa',
          class: 'form-control',
          type: 'text',
          name: 'name',
          placeholder: 'Nazwa'
        }) }}
        {{ input({
          label: 'Cid',
          class: 'form-control',
          type: 'text',
          name: 'cid',
          placeholder: 'Cid'
        }) }}
        {{ input({
          type: 'file',
          name: 'file',
          class: 'form-control',
          label: 'Wgraj zdjęcie'
        }) }}
      </div>
    </div>
    <div class="modal-footer">
      <input type="submit" value="Save changes">
    </div>
  </form>
{% endblock %}
