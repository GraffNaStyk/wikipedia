{% extends layout %}

{% block content %}
  <div class="box">
    <table class="table table-striped">
      <thead>
      <tr>
        <td>Profesja</td>
        <td>Treść</td>
        <td class="position-sticky">
          #
        </td>
      </tr>
      </thead>
      <tbody>
      {% for vocation in vocations %}
        <tr>
          <td>{{ vocation.name }}</td>
          <td>{{ vocation.description }}</td>
          <td class="position-sticky">
            <button class="is_button btn-sm render" data-el="modal" data-url="vocations/edit/{{ vocation.id }}">Edycja</button>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
