{% block content %}
  <form data-action="users/store" method="post">
    <div class="modal-header">
      <h5 class="modal-title">Dodaj użytkownka</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="form__grid">
        {{ input({
          name: 'name',
          type: 'text',
          class: 'form-control',
          label: 'Nick'
        }) }}
        {{ input({
          name: 'email',
          type: 'email',
          class: 'form-control',
          label: 'Adres email',
        }) }}
        {{ input({
          name: 'password',
          type: 'password',
          class: 'form-control',
          label: 'Hasło',
        }) }}
      </div>
    </div>
    <div class="modal-footer">
      <input type="submit" value="Save changes">
    </div>
  </form>
{% endblock %}
