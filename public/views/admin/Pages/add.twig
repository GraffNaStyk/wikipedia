{% block content %}
  <form data-action="pages/store" method="post">
    <div class="modal-header">
      <h5 class="modal-title">Nowa strona</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="form__grid">
        {{ input({
          label: 'Tytu≈Ç',
          class: 'form-control',
          type: 'text',
          name: 'title'
        }) }}
        {{ select({
          label: 'Typ strony',
          class: 'form-control',
          name: 'type',
          data: types
        }) }}
      </div>
    </div>
    <div class="modal-footer">
      <input type="submit" value="Save changes">
    </div>
  </form>
{% endblock %}
