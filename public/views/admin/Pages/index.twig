{% extends layout %}

{% block content %}
  <div class="box">
    <h3>Wyszukaj</h3>
    <form action="{{ url('pages') }}" method="post">
      <div class="form__grid">
        {{ input({
          class: 'form-control',
          name: 'title',
          label: 'Nazwa',
          value: search.title
        }) }}
        {{ select({
          class: 'form-control',
          name: 'type',
          data: types,
          label: 'Typ',
          selected: search.type
        }) }}
      </div>
      {{ input({
        class: 'form-control',
        type: 'submit'
      }) }}
    </form>
    <table class="table table-striped">
      <thead>
        <tr>
          <td>Id</td>
          <td>Nazwa</td>
          <td>Typ</td>
          <td>Aktywna</td>
          <td class="position-sticky">
            <button class="btn-sm render" data-url="pages/add" data-el="modal"> <i class="fa fa-plus"></i> </button>
          </td>
        </tr>
      </thead>
      <tbody>
      {% for page in pages %}
       <tr>
         <td>{{ page.id }}</td>
         <td>{{ page.title }}</td>
         <td>{{ page.type }}</td>
         <td>{{ page.is_active == 1 ? 'Tak' : 'Nie' }}</td>
         <td class="position-sticky">
           <a class="is_button btn-sm" href="{{ url('pages/edit/'~page.id) }}">Edycja</a>
           &nbsp;
           <a class="is_button btn-sm" href="{{ url('pages/edit/'~page.id) }}">PodglÄ…d</a>
           &nbsp;
           <a class="is_button btn-sm" href="{{ url('pages/active/'~page.is_active~'/'~page.id) }}">
            {{ page.is_active == 1 ? 'Deaktywuj' : 'Aktywuj' }}
           </a>
         </td>
       </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
